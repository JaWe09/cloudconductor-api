
<div class="vmenu">
	<h3>Quickjump</h3>
	<ul>
	<li><a href="/web/packages"><span>-top-</span></li>
	#foreach( $package in $packages )
		<li><a href="/web/packages#$package.name"><span>$package.name</span></a></li>
	#end
	</ul>
</div>

<div class="hmenu_left">
	<a class="backButton" href="/web"><span>Back to Home</span> </a>
</div>

<div class="info_container">
	<p>This page shows all packages managed by the CloudConductor
		(alphabetically sorted), their versions (sorted), and the services
		that they offer.</p>
</div>

		#foreach( $package in $packages )
<div class="segment_container">
	<h2>
		<a name="$package.name">$package.name</a>
	</h2>
	<div class="segment_content">

		#if( $package.versions.isEmpty() )
		<p class="subtle">This package has no versions</p>
		#else
		<table class="install_status">
			<tr>
				<th width="95%">Versions</th>
				<th width="5%"></th>
			</tr>
			#foreach( $rpm in $package.versions )
			<tr>
				<td>$rpm.version</td>
				<td class="button"><a
					href="/web/packages/$package.name/package/$rpm.id/add"><img
						src="$imgdir/start.png" alt="Install Package"
						name="InstallPackage" title="Install Package" /> </a></td>
			</tr>
			#end
		</table>
		#end 
		</div>
		<div class="segment_content">
		<table class="install_status">
			<tr>
				#if( $package.services.isEmpty() )
				<th width="95%">This package has no services</th> #else
				<th width="95%">Services</th> #end
				<th width="5%"><a
					href="/web/packages/$package.name/services/add"><img
						src="$imgdir/add_att.png" alt="Add Service" name="Add Service"
						title="Add Service" /> </a></th>
			</tr>

			#foreach( $service in $package.services )
			<tr>
				<td>$service.name</td>
				<td class="button"><a
					href="/web/packages/$package.name/services/$service.name/remove"><img
						src="$imgdir/delete_edit.png" alt="Remove Service"
						name="Remove Service" title="Remove Service" /> </a></td>
			</tr>
			#end
		</table>
	</div>
</div>
#end


