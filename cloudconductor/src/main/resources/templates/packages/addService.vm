 #if( $chooseError )
<div class="info_container">
	<p>$newError</p>
</div>
#end

<a class="backButton" href="/web/packages#$packageName"><span>Back</span>
</a>
<div class="segment_container">
	<h2>Add existing service to $packageName :</h2>

	<form action="/web/packages/$packageName/services/add" method="post">

		<div class="segment_content">
			<table class="install_status">
				#foreach ($service in $sorterTool.sort($services))
				<tr>
					<td width="5%" align="center"><input type="checkbox" name="service" value="$service">
					</td>
					<td>$service</td>
				</tr>
				#end
			</table>
		</div>
		#if($services.size() > 0)
		<p>
			<input type="submit" value="Add service" />
		</p>
		#else
		<p>No unassigned services available.</p>
		#end
	</form>
</div>

#if( $newError )
<div class="info_container">
	<p>$newError</p>
</div>
#end
<div class="segment_container">
	<h2>Add a new service to $packageName :</h2>

	<form action="/web/packages/$packageName/services/add/new"
		method="post">

		<div class="segment_content">
			<table class="install_status">
				<tr>
					<td>Service name:</td>
					<td><input style="width: 100%;" name="servicename" type="text"
						value="$servicename" />
					</td>
				</tr>
				<tr>
					<td>Initscript name:</td>
					<td><input style="width: 100%;" name="initscript" type="text"
						value="$initscript" />
					</td>
				</tr>
				<tr>
					<td>Description:</td>
					<td><input style="width: 100%;" name="description" type="text"
						value="$description" />
					</td>
				</tr>
			</table>
		</div>
		<p>
			<input type="submit" value="Add new service" />
		</p>
	</form>
</div>
